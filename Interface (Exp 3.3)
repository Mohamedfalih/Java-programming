SOURCE CODE:

//INTERFACE
package Exp_3_3;

public interface Employee {
	String company_name="MicroSoft";
	
	void getDetails();
	void calculateSalary(double basicPay,double bonus,double taxRate);
	void showLeaveBalance();
}

//US EMPLOYEE CLASS
package Exp_3_3;

public  class USEmployee implements Employee {
	
	private String name;
	private int employeeId;
	private int paidLeavesPerYear;
	private int WorkingDaysPerWeek;
	
	public USEmployee(String name, int employeeId, int paidLeavesPerYear, int WorkingDaysPerWeek)
	{
		super();
		this.name = name;
		this.employeeId = employeeId;
		this.paidLeavesPerYear = paidLeavesPerYear;
		this.WorkingDaysPerWeek = WorkingDaysPerWeek;
	}
	
	public void getDetails()
	{
		System.out.println("Name                  : "+name);
		System.out.println("Employee Id           : "+employeeId);
		System.out.println("Paid Leaves Per Year  : "+paidLeavesPerYear);
		System.out.println("Working Days Per Week : "+WorkingDaysPerWeek);
	}
	public void calculateSalary(double basicPay,double bonus,double taxRate)
	{
		System.out.println("Final Salary (US)     : "+((basicPay+bonus)-(basicPay*taxRate/100)));
	}
	public void showLeaveBalance()
	{
		System.out.println("Leave Balance = 10");
	}
}

//INDIAN EMPLOYEE CLASS
package Exp_3_3;

public class IndianEmployee implements Employee {
	private String name;
	private int employeeId;
	private int paidLeavesPerYear;
	private int WorkingDaysPerWeek;
	
	public IndianEmployee(String name, int employeeId, int paidLeavesPerYear, int WorkingDaysPerWeek) {
		super();
		this.name = name;
		this.employeeId = employeeId;
		this.paidLeavesPerYear = paidLeavesPerYear;
		this.WorkingDaysPerWeek = WorkingDaysPerWeek;
	}
	
	public void getDetails()
	{
		System.out.println("Name                  : "+name);
		System.out.println("Employee Id           : "+employeeId);
		System.out.println("Paid Leaves Per Year  : "+paidLeavesPerYear);
		System.out.println("Working Days Per Week : "+WorkingDaysPerWeek);
	}
	
	public void calculateSalary(double basicPay,double bonus,double taxRate)
	{
		System.out.println("Final Salary (INR)    : "+((basicPay+bonus)-(basicPay*taxRate/100)));
	}
	public void showLeaveBalance()
	{
		System.out.println("Leave Balance = 10");
	}
	
}

//MAIN CLASS
package Exp_3_3;

public class TestEmployee {

	public static void main(String[] args) {
		
		USEmployee Uemp = new USEmployee("Falih",329,20,5);
		
		IndianEmployee Iemp = new IndianEmployee("Guru",315,25,6);
		
		System.out.println("*******US EMPLOYEE DETAILS*******");
        System.out.println();
        Uemp.getDetails();
        Uemp.calculateSalary(30000, 2500, 55);
        Uemp.showLeaveBalance();

        System.out.println();
        System.out.println("*******INDIAN EMPLOYEE DETAILS*******");
        System.out.println();
        Iemp.getDetails();
        Iemp.calculateSalary(20000, 2000, 85);
        Iemp.showLeaveBalance();
	}

}

OUTPUT:

